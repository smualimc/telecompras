<article>
    <% if notice %>
        <aside id="notice"><%= notice %></aside>
    <% end %>

    <h2>Su Carro Telecompras</h2>
    <table>
            <%= render(@cart.line_items) %>
            <tfoot>
                <tr>
                    <th colspan="2">Total:</th>
                    <td class="price"><%= number_to_currency(@cart.total_price) %></td>
                </tr>
            </tfoot>
    </table>
        <%= button_to 'Carro vacío', @cart, method: :delete, data: {confirm: '¿Está usted seguro?'} %>
    
</article>